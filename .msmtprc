# default values for all accounts
defaults
auth on
port 587
tls            on
tls_trust_file /Users/tminor/Misc/certs/ca-bundle.crt
logfile        ~/.msmtp.log

# Work
account        work
host           smtp.gmail.com
port           587
from           thomas.minor@usg.edu
user           thomas.minor@usg.edu
passwordeval   echo $(gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.passwd/work.gpg)

account default : work

